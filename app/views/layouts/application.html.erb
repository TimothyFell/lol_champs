<!DOCTYPE html>
<html>
  <head>
    <title>LolChamps</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <h1>LoL Champs</h1>
      <nav>
        <% if @current_user %>

        <% else %>
          <a href="/login">Login</a>
          <a href="/register">Register</a>
        <% end %>
      </nav>
    </header>
    <div class="flash">
      <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, class: name %>
        <% end %>
    </div>
    <%= yield %>
    <footer>
    </footer>
  </body>
</html>
