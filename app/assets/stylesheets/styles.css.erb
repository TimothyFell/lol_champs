body {
  font-size:1em;
  padding:0;
  margin:0;
  font-family:'Nunito', sans-serif;
  box-sizing: border-box;
  color:#121212;
}

header {
  padding:15px 0;
  background-color: #121212;
  border-bottom:2px solid #262626;
  position:relative;
}

header .container {
    display: flex;
    justify-content: space-between;
}

.flash {
  position: absolute;
  text-align: center;
  width: 100%;
  top: 100%;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(18,18,18,0.6);
  color: white;
}

.flash > div {
  padding:5px 0;
}

h1,h2,h3,h4 {
  font-family: 'Roboto', sans-serif;
}

h1 {
  margin:0;
}

h1 > a {
  color: white;
  text-decoration: none;
}

nav {
  display: flex;
}

nav > a {
  display: block;
  line-height: 38px;
  padding:0 15px;
  color:white;
  text-decoration: none;
  font-weight: bold;
  border-bottom:2px solid #121212;
  transition: all 0.2s ease-in-out;
}

nav > a:hover {
  border-bottom:2px solid #626262;
  background-color:#262626;
  transition: all 0.2s ease-in-out;
}

.container {
  max-width:1600px;
  width:80%;
  min-width:420px;
  margin:auto;
}

.centered-text {
  text-align: center;
  display: flex;
  justify-content: center;
  height: 250px;
  align-items: flex-end;
}

section {
  padding:40px 0 80px;
}

.landing, .splash{
  background-image:url(<%= asset_data_uri 'landing.jpeg' %>);
  background-size: cover;
  background-position: center 25%;
  background-repeat: no-repeat;
  padding:40px 0 80px;
  color:white;
}

.landing p a,
.splash p a {
  color:white;
  font-weight: bold;
  text-decoration: none;
  transition: all 0.2s ease-in-out;
}

.landing p a:hover,
.splash p a:hover {
  text-decoration: underline;
  transition: all 0.2s ease-in-out;
}

.champions {
  display: grid;
  padding:25px;
  grid-gap:25px;
  grid-template-columns: 33% 33% 33%;
}

.champ {
  padding: 0;
}

.champ h3 {
  margin:0;
  padding:0;
  text-align: center;
}

.champ h3 a {
  background-color: #121212;
  border: 2px solid #262626;
  box-shadow: 1px 1px 3px 0px rgba(0,0,0,0.25);
  color:white;
  text-decoration: none;
  display:block;
  padding:25px;
  transition: all 0.2s ease-in-out;
}

.champ h3 a:hover {
  text-shadow:1px 1px 5px rgba(0,0,0,1);
  background-color: #3c3c3c;
  border: 2px solid #121212;
  transition: all 0.2s ease-in-out;
}

form {

}

input {
  outline: none;
  border: none;
  padding: 5px 5px;
  line-height: 1.25;
  font-size: 1em;
  border:#121212 1px solid;
}

form {
  max-width: 450px;
  margin: auto;
  background-color: #121212;
  padding: 5px 25px;
  color:white;
}

.landing form {
  background-color:transparent;
  width:300px;
}

form p {
  display:flex;
  justify-content: space-between;
}

label {
  font-size:1.2em;
}

input[type="text"],
input[type="password"] {
  margin:0 15px;
}

input[type="submit"] {
  background-color:#121212;
  border:2px solid #626262;
  color:white;
  transition: all 0.2s ease-in-out;
  padding:5px 15px;
}

input[type="submit"]:hover {
  background-color: #262626;
  transition: all 0.2s ease-in-out;
  cursor: pointer;
}

.splash .container {
  display:flex;
  justify-content: space-evenly;
}

.stats {
  width:400px;
}

.stats h3 {
  text-align: center;
}

.stat_row:nth-child(2n+1) {
    background-color: #262626;
    color: white;
}

.stat_row:nth-child(2n) {
    background-color: #e6e6e6;
    color:#121212;
}

.stat_row {
  display:flex;
  justify-content: space-between;
}

.stat_row > p {
  box-sizing: border-box;
  margin: 10px 0;
}

.stat {
  width:60%;
  text-align: right;
  padding-right: 10%;
}

.val {
  width:40%;
  text-align: right;
  padding-right: 20%;
}

.form_page h2 {
  max-width:450px;
  margin:30px auto;
}

.favorites .stats {
  width:100%;
}

.unfav a {
  color: #121212;
  font-weight: bold;
  text-decoration: none;
  transition: all 0.2s ease-in-out;
}

.unfav a:hover {
  text-decoration: underline;
  transition: all 0.2s ease-in-out;
}
